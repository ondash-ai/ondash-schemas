{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "usercontext.json",
  "title": "UserContext MongoDB types",
  "description": "User context and preferences",
  "$defs": {
    "DUserContextBase": {
      "title": "DUserContextBase",
      "type": "object",
      "properties": {
        "id": { "type": ["string", "null"], "default": null },
        "user": { "type": "string" },
        "defaultProject": { "type": "string" },
        "jsonEditing": { "type": "boolean", "default": false },
        "cliAgent": { "type": "boolean", "default": false },
        "fullname": { "type": "string", "default": "" },
        "photo": { "type": "string", "default": "" }
      },
      "required": ["user", "defaultProject"]
    }
  }
}
